apiVersion: hive.openshift.io/v1
kind: MachinePool
metadata:
  name: "{{ cluster_name }}-worker"
  namespace: "{{ cluster_name }}"
  labels:
    app: "{{ cluster_name }}"
spec:
  clusterDeploymentRef:
    name: "{{ cluster_name }}"
  name: worker
  platform:
    aws:
      rootVolume:
        iops: 100
        size: 100
        type: gp2
      type: m5.2xlarge
  replicas: 3
