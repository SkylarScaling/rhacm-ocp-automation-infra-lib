apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: "{{ cluster_name }}"
  namespace: openshift-gitops
spec:
  destination:
    namespace: "{{ cluster_name }}"
    server: "{{ cluster_server_api }}"
  project: default
  source:
    path: "clusters/{{ cluster_name }}"
    repoURL: >-
      https://<repo_url>/ocp-gitops-infra-config
    targetRevision: "{{ target_branch }}"
  syncPolicy:
    automated: {}
